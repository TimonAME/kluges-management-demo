{% extends 'base.html.twig' %}

{% block title %}Honorarium{% endblock %}

{% block body %}
    <h1>Honorarium</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ honorarium.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ honorarium.amount }}</td>
            </tr>
            <tr>
                <th>Issued_date</th>
                <td>{{ honorarium.issuedDate ? honorarium.issuedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Is_paid</th>
                <td>{{ honorarium.isPaid ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_honorarium_index') }}">back to list</a>

    <a href="{{ path('app_honorarium_edit', {'id': honorarium.id}) }}">edit</a>

